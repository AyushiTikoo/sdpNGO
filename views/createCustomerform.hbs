<link rel='stylesheet' href='/stylesheets/createform.css' />
<script src="/javascripts/createform.js"></script>
<div class="container" style="margin-top: 50px; font-family: cursive;  ">
    
    <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8" style="border: 7px solid black;margin-right: 30px;">
                
                <form method="post" action="/customer/create">
                    <!-- SENDER -->
                <div class="chip" style="margin-top: 30px;color:darkblue;">
                    <img src="/Images/avatar.jpg" alt="Person" width="96" height="96">
                    Registration
                </div>
                <div class="form-group" style=" margin-left:40px;">
                        <input type="email" style="border: 2px solid darkblue;" class="form-control" id="email" autofocus required name="email" autocomplete="off">
                        <label for="email">Email:</label>
                    </div>
                    <div class="form-group" style=" margin-left:40px;">
                        <input type="text" style="border: 2px solid darkblue;" class="form-control" id="cName" required name="cName" autocomplete="off">
                        <label for="cName">Name:</label>
                    </div>
                    <div class="form-group" style="margin-left:40px;">
                        <input type="text" style="border: 2px solid darkblue;" class="form-control" id="cMobile" required pattern="[0-9]{10}" maxlength="10" name="cMobile" autocomplete="off">
                        <label for="cMobile">Mobile-No:</label>
                    </div>
                    <div class="form-group" style="  margin-left:40px;">
                        <input type="password" style="border: 2px solid darkblue;" class="form-control" id="cPassword" required name="cPassword" autocomplete="off">
                        <label for="cPassword">Password:</label>
                    </div>
                    <div class="form-group" style="  margin-left:40px;">
                        <input type="password" style="border: 2px solid darkblue;" class="form-control" id="cnfrmPassword" required name="cnfrmPassword" autocomplete="off">
                        <label for="cnfrmPassword"> Confirm Password:</label>
                    </div>
                <button type="submit" style=" margin-left:110px;  margin-top: 30px; width: 500px; margin-bottom: 30px;"
                class="btn btn-dark">Add User</button>
                </form>
            </div>
            <div class="col-sm-2"></div>
    </div> 
</div>